							<div class="col-md-12 form-group">
                {# {{ form.pass }} #}
								<input type="password" class="form-control" id="edit-pass" name="pass" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
							</div>             
